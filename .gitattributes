# Handle line endings automatically
* text=auto

# Force LF for shell scripts
*.sh text eol=lf

# Force CRLF for Windows scripts
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.docx binary
*.xlsx binary

# Exclude from export
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
.vscode/ export-ignore
*.log export-ignore
*.md export-ignore
